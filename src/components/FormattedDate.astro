---
interface Props {
  date: Date;
}

const { date } = Astro.props;
const parsedDate = new Date(date); // Safeguard for flexible date parsing
---

<time datetime={parsedDate.toISOString()}>
  {
    parsedDate.toLocaleDateString("en-us", {
      year: "numeric",
      month: "short",
      day: "numeric",
    })
  }
</time>
